{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": false,
    "noEmit": true,
    "types": ["bun-types", "node", "vite/client"],
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "baseUrl": "."
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "drizzle/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "react-router.config.ts",
    "vite.config.ts",
    "drizzle.config.ts"
  ]
}
